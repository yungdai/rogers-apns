<h1>APN Index</h1>
<!--check to see if the current user is an adminstrator-->
<% if current_user.administrator? %>
    <div>Index of all APN's</div>
<% else %>
    <!--if you are a user you should only see your APN's-->
    <div>Index of all owned APN's</div>
<% end %>
<hr>

<div class="row">
  <div class="large-6 columns">
    <ul>
      <% if current_user.administrator? %>
          <% @apns.each do |apn| %>
            <li>APN Name: <%= apn.apn_name %> | Project Name: <%= apn.project_name %>

            </li>
          <% end %>
      <% else %>
          <% current_user.apns.each do |apn| %>
            <li>APN Name: <%= apn.apn_name %> | Project Name: <%= apn.project_name %> </li>
          <% end %>
      <% end %>
    </ul>
  </div>
</div>
