<h1>Edit APN Contact</h1>
<%= form_for [@apn, @contact] do |f| %>
    <% if @contact.errors.any? %>
        <div class="error_messages">
          <h2>Contact Information is invalid</h2>
          <ul>
            <% for message in @contact.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :business_contact %>
      <%= f.check_box :business_contact %>
    </p>
    <p>
      <%= f.label :technical_contact %>
      <%= f.check_box :technical_contact %>
    </p>
    <p>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </p>
    <p>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </p>
    <p>
      <%= f.label :company_name %>
      <%= f.text_field :company_name %>
    </p>
    <p>
      <%= f.label :street_address %>
      <%= f.text_field :street_address %>
    </p>
    <p>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </p>
    <p>
      <%= f.label :province_state, 'Province/State' %>
      <%= f.text_field :province_state %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :phone_number1, 'Main Phone' %>
      <%= f.text_field :phone_number1 %>
    </p>
    <p>
      <%= f.label :phone_number2, 'Cell Phone' %>
      <%= f.text_field :phone_number2 %>
    </p>
    <%= f.submit "Save Changes"%>
    <%= button_to "Cancel", apn_contacts_url, :method => "get" %>
<% end %>